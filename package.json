{
  "scripts": {
    "install-with-patch": "npm -C .patch run build && pnpm install",
    "clean": "rm -rf build",
    "dev": "npm run dev:prepare && concurrently -k 'npm:remix:dev' 'npm:tsc:dev' 'npm:tailwind:dev' -c 'bgBlue.bold,bgYellow.bold,bgMagenta.bold'",
    "dev:prepare": "npm run tailwind && bash scripts/copy-assets.sh",
    "dev:e2e": "NODE_ENV=test npm run dev:prepare && NODE_ENV=test PORT=3001 npm run remix:dev",
    "remix:dev": "remix dev",
    "tsc": "tsc",
    "tsc:dev": "tsc --noEmit --watch --preserveWatchOutput",
    "tailwind": "tailwindcss -o \"./build/tailwind/${NODE_ENV:-development}/index.css\"",
    "tailwind:dev": "npm run tailwind -- --watch",
    "prettier": "prettier -w .",
    "prettier:check": "prettier -c .",
    "prettier:diff": "prettier -w --ignore-unknown --no-error-on-unmatched-pattern $(npm run -s diff)",
    "eslint": "npm run eslint:check -- --fix",
    "eslint:check": "eslint . --cache --ext .js,.jsx,.ts,.tsx",
    "lint": "npm run prettier && npm run eslint",
    "lint:check": "npm run prettier:check && npm run eslint:check",
    "lint:diff": "npm run prettier:diff && npm run eslint",
    "test": "NODE_ENV=test vitest",
    "test-e2e": "NODE_ENV=test playwright test",
    "build": "bash scripts/vercel.sh",
    "deploy": "npm run build && vercel deploy --prebuilt build/remix/production/deploy",
    "deploy:production": "npm run build && vercel deploy --prebuilt build/remix/production/deploy --prod",
    "diff": "git diff --name-only ${DIFF_COMMIT:-HEAD} && git ls-files --others --exclude-standard",
    "qrcode": "qrcode-terminal http://$(ip -o -4 address list wlan0 | awk '{print $4}' | cut -d / -f 1):3000"
  },
  "dependencies": {
    "@badrap/bar-of-progress": "^0.2.1",
    "@ffmpeg/core": "^0.11.0",
    "@ffmpeg/ffmpeg": "^0.11.5",
    "@remix-run/node": "^1.5.1",
    "@remix-run/react": "^1.5.1",
    "@remix-run/server-runtime": "^1.5.1",
    "@remix-run/vercel": "^1.5.1",
    "@tanstack/react-query": "^4.12.0",
    "@tanstack/react-query-devtools": "^4.12.0",
    "@vercel/node": "^1.15.4",
    "lodash": "^4.17.21",
    "qs": "^6.10.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-feather": "^2.0.9",
    "react-hook-form": "^7.37.0",
    "react-hot-toast": "^2.4.0",
    "react-router-dom": "^6.3.0",
    "react-use": "^17.4.0",
    "zod": "^3.14.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.19.2",
    "@remix-run/dev": "1.5.1",
    "@remix-run/serve": "1.5.1",
    "@tailwindcss/line-clamp": "^0.3.1",
    "@types/lodash": "^4.14.179",
    "@types/node": "^16",
    "@types/qs": "^6.9.7",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "autoprefixer": "^10.4.2",
    "concurrently": "^7.0.0",
    "daisyui": "^2.2.2",
    "esbuild": "^0.14.42",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "express": "^4.17.3",
    "happy-dom": "^2.55.0",
    "postcss": "^8.4.7",
    "prettier": "^2.5.1",
    "qrcode-terminal": "^0.12.0",
    "tailwindcss": "^3.0.23",
    "typescript": "4.5.5",
    "vitest": "^0.7.13"
  },
  "volta": {
    "node": "16.15.0"
  },
  "pnpm": {
    "patchedDependencies": {
      "@remix-run/dev@1.5.1": "patches/@remix-run__dev@1.5.1.patch",
      "@remix-run/serve@1.5.1": "patches/@remix-run__serve@1.5.1.patch"
    }
  }
}
